@model IEnumerable<CollegeList.Models.Institution>

@{
    ViewData["Title"] = "Explore";
}

<!doctype html>
<!--[if IE 7 ]>    <html lang="en-gb" class="isie ie7 oldie no-js"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en-gb" class="isie ie8 oldie no-js"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en-gb" class="isie ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html lang="en-gb" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--[if lt IE 9]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <title>Explore Universities</title>

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/isotope.css" media="screen" />
    <link rel="stylesheet" href="~/js/fancybox/jquery.fancybox.css" type="text/css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/css/da-slider.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <!-- Font Awesome -->
    <link href="font/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="navbar-header">
                    <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand scroll-top logo"><b>College</b>List</a>
                </div>
                <!--/.navbar-header-->
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" id="mainNav">
                        <li class="nav-item"><a class="nav-link" onclick="@(" location.href='" + @Url.Action("Index", "Home") + "' ");">Home</a></li>
                        <li class="nav-item"><a class="nav-link" onclick="@(" location.href='" + @Url.Action("Explore", "Home") + "' ");">Explore</a></li>
                        <li class="nav-item"><a class="nav-link" onclick="@(" location.href='" + @Url.Action("Model", "Home") + "' ");">About Us</a></li>

                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
        </div>
        <!--/.container-->
    </header>
    <!--/.header-->



    <div id="#top"></div>

    <section class="sub-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2></h2>
                    <p></p>
                </div>
            </div>
        </div><!-- END container -->
    </section>
    <!--  -->
    <section id="model" class="page-section">
        <div class="container">

            <div class="row">
                <div class="heading text-center">
                    <!-- Heading -->
                    <br><br><br>
                    <p><input type="text" style=" border-radius: 20px; text-align:left;width:350px;" placeholder="Florida,Ohio,Colorado..">		</p>
                    <button class="btn btn-danger btn" style="border- radius : 20 px" type="button">Search</button>
                </div>
                <div class="col-sm-12">

                </div>
            </div>


        </div>
        <!--/.container-->
    </section>
    <section class="page-section>
        <div class="container">
        </div>
    </section>
    <section id="plans" class="page-section">
        <div class="container">
            <div class="heading text-center">
                <!-- Heading -->
                <h2>Colleges</h2>
                <p>Click on respective college details to know more about the departments and degrees offered by the university</p>
            </div>
            <div class="row flat">
                @foreach (var institution in Model)
                {

                    <div class="col-lg-3 col-md-3 col-xs-12">
                        <ul class="plan plan2 featured">

                            <li class="uni-name"> @Html.DisplayFor(modelItem => institution.SchoolName) </li>
                            <center>
                                <p>
                                    <strong> City</strong>  @Html.DisplayFor(modelItem => institution.SchoolCity)<br> <strong> State </strong> @Html.DisplayFor(modelItem => institution.SchoolState)
                                </p>


                                <a class="btn btn-danger btn-lg;scroll-link" asp-area="" asp-action="Details" asp-route-id="@institution.Id">Details</a>

                            </center>

                        </ul>
                    </div>




                }
            </div>
        </div>
    </section>


    <!--/#north-america-->

    <footer class="page-section">
        <div class="container">
            <div class="row">

                <div class="col-md-4 contact">
                    <h4>Contact Info</h4>
                    <p></p>
                    <ul>
                        <li><i class="fa fa-phone"></i>1-123-345-6789</li>
                        <li><a href="#"><i class="fa fa-envelope-o"></i> myweb@usf.edu</a></li>
                        <li><i class="fa fa-flag"></i>Tampa,Florida,33613</li>
                    </ul>
                </div>
            </div><!-- END Row -->
        </div>
    </footer>
    <!--/.page-section-->

    <a href="#top" class="topHome"><i class="fa fa-chevron-up fa-2x"></i></a>

    <!--[if lte IE 8]><script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script><![endif]-->
    <script src="~/js/modernizr-latest.js"></script>
    <script src="~/js/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.isotope.min.js" type="text/javascript"></script>
    <script src="~/js/fancybox/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script src="~/js/jquery.nav.js" type="text/javascript"></script>
    <script src="~/js/jquery.cslider.js" type="text/javascript"></script>
    <script src="~/js/custom.js" type="text/javascript"></script>
    <SCRIPT>
        var oldEelementId;
        function ShowAndHide(idn) {
            if (window.oldEelementId !== undefined && window.oldEelementId !== idn) {
                var oldDetails = document.getElementById(window.oldEelementId);
                oldDetails.style.display = 'none';
            }
            var x = document.getElementById(idn);

            x.style.display = 'block';
            x.scrollIntoView();
            window.oldEelementId = idn;
        }
    </SCRIPT>
</body>
</html>